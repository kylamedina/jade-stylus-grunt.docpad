h1, .h1, h2, .h2, h3, .h3, h4, .h4, h5, .h5, h6, .h6
	font-weight 600

header.main
	cf()
	> div p:nth-of-type(1)
		lead()

nav.main
	padding 15px 0
	nav(true)
	clearfix()
	background-color offwhite
	position fixed
	width 100%
	z-index 9999

main
	margin-top 55px

.center
	center(70)
svg
	padding 0.2rem
	border thin solid lightgray
	margin-right 1rem
	background white

section
	padding 2rem 0


section, header, nav.main, footer
	clearfix()
	> div
		center()


.horizontal
	nav(true)
.vertical
	nav()

img
	max-width 100px

img:nth-of-type(2)
	img(true)

video
	max-width 300px

pre:nth-of-type(1)
	code()
	col(6,12)
pre:nth-of-type(2)
	code(invert)
	col(6,12)

fieldset
	div
		
		padding 0.5rem
fieldset.form
	label
		col 3,16
